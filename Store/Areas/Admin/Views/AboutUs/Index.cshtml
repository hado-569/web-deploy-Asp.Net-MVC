@model PagedList.IPagedList<Store.Models.EF.AboutU>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách đã thêm !
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">

                    <hr class="sidebar-divider">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Mô tả</th>
                                <th>Code HTML</th>
                                <th>Người tạo</th>
                                <th>Ngày tạo</th>

                                <th>#</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tên</th>
                                <th>Mô tả</th>
                                <th>Code HTML</th>
                                <th>Người tạo</th>
                                <th>Ngày tạo</th>

                                <th>#</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Detail</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>


                                    <td>
                                        <a href="/Admin/AboutUs/Edit/@item.ID">Sửa</a>

                                      
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))*@

                </div>
                <ul class="pagination">
                    <li class="paginate_button page-item active">
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>