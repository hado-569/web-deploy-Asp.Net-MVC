@model List<Store.Models.EF.Content>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <div class="main">
        <div class="wrap">
            <div class="section group">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-8">
                        @if (Model.Count > 0)
                        {
                            <h2 class="head">Hot News</h2>
                            foreach (var item in Model)
                            {
                                <div class="single-blog-post post-style-4 d-flex align-items-center wow fadeInUpBig" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUpBig;">

                                    <div class="post-thumbnail">
                                        <a href="/tin-tuc-chi-tiet/@item.Metatile-@item.ID">
                                            <img src="@item.Images" alt="@item.Name" title="@item.Name">
                                        </a>
                                        
                                    </div>

                                    <div class="post-content">
                                        
                                        <a href="/tin-tuc-chi-tiet/@item.Metatile-@item.ID" >
                                            <h3 class="head">@item.Name</h3>
                                        </a>
                                        <p>@item.Description</p>

                                        <div class="post-meta">
                                            <p><a href="#" class="post-author">@(item.CreatedBy)</a> on <a href="#" class="post-date">@(item.CreatedDate)</a></p>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                        else
                        {

                            <p><h2 class="head">Hiện tại chưa có bài viết nào được cập nhật !</h2></p>
                            <p>Vui lòng sử dụng những dịch vụ khác !  </p>
                            <p>Trân thành cảm ơn !</p>

                        }
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="row">
                          @{Html.RenderAction("CategoryofNews", "ContentNews"); }
                        </div>
                    </div>
                </div>
                
                <div class="clear"></div>
            </div>
        </div>
    </div>    
                    

